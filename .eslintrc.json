{
  "env": {
    "es2021": true,
    "browser": true,
    "node": true
  },
  "extends": ["plugin:vue/vue3-essential", "standard-with-typescript"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"], // Your TypeScript files extension
      "parserOptions": {
        "project": ["./tsconfig.json"] // Specify it only for TypeScript files
      }
    }
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "parser": "@typescript-eslint/parser"
  },
  "plugins": ["vue"],
  "rules": {}
}
